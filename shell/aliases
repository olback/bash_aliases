# ls aliases
#alias ll='ls -alhF'
#alias la='ls -A'
#alias l='ls -CF'
alias ll='exa -la'

# Make dir and cd to it
mkcd () { mkdir $1 && cd $1 }

# Create a new Cargo project with a unique email
nrp () { CARGO_CARGO_NEW_EMAIL="$1@olback.net" cargo new $1 $2 && cd $1 }

# Update dotfiles
dotu () {
    local CWD=$(pwd)
    cd ~/.dotfiles && git pull
    echo 'source ~/.dotfiles/dotfiles OR open a new shell'
    cd $CWD
}
